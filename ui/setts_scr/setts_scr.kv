#: import translate translation.translate
#: import Config path_n_data.Config

<SettingsScreen>:
    name: "setts"
    md_bg_color: app.theme_cls.bg_normal

    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(35)

        MDLabel:
            text: translate("Settings")
            halign: "center"
            font_size: sp(40)
            adaptive_height: True
        MDBoxLayout:
            adaptive_height: True
            size_hint_x: None
            width: 180
            spacing: dp(4)
            pos_hint: {"center_x":.5}

            Label:
                text: translate("Language: ")
                size_hint_x: None
                width: self.texture_size[0]
                font_size: sp(16)
            MDDropDownItem:
                id: lang
                text: Config().lang
                on_release: root.open_lang_menu()
        MDBoxLayout:
            adaptive_width: True
            adaptive_height: True
            pos_hint: {"center_x": .5}
            spacing: dp(35)

            MDSwitch:
                active: Config().edit_mode
                on_active: root.change_edit_mode(args[1])
                size_hint_x: None

            Label:
                text: translate("Edit mode")
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"center_y": .65}
                font_size: sp(16)
                
        
        MDWidget
            